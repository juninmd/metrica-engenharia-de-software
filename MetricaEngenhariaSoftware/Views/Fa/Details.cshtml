@model MetricaEngenhariaSoftware.Entity.Entidade.MES.MES_FA

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>FA</h2>
@using (Html.BeginForm("AddOrUpdate", "Fa", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IntIdFa)

        <div class="form-group">
            <label class="control-label col-md-2">Valor FA</label>
            <div class="col-md-10">
                <input name="DecValorFa" class="form-control" value="@Model.DecValorFa"/>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar para a Lista", "Grid")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
