@model MetricaEngenhariaSoftware.Entity.Entidade.MES.MES_TIPO_SISTEMA

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tipo de Sistema</h2>
@using (Html.BeginForm("AddOrUpdate","TipoSistema",FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IntIdTipoSistema)

        <div class="form-group">
            <label class="control-label col-md-2">Nome Tipo do Sistema:</label>
            <div class="col-md-10">
                <input class="form-control" name="StrNomeTipoSistema" value="@Model.StrNomeTipoSistema" />
                @Html.ValidationMessageFor(model => model.StrNomeTipoSistema, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Valor do Sistema:</label>
            <div class="col-md-10">
                <input class="form-control" name="DecValorTipoSistema" value="@Model.DecValorTipoSistema" />
                @Html.ValidationMessageFor(model => model.DecValorTipoSistema, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar para a Lista", "Grid")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
